import java.util.Scanner;
public class ReverseRightAngleTriangle{
    public static void main(String[] args){
        Scanner input = new Scanner(System.in);
        System.out.print("Enter: ");
        int a = input.nextInt();
        input.close();
        for(int i = 0 ;i <= a ; i++){
            for(int j = a ; j >= i ;j-- ){
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
